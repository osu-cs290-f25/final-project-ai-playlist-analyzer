<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>MoodRatings.com</title>
  <link rel="stylesheet" href="/static/index.css">
  <script src="/static/index.js" charset="utf-8" defer></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/color-thief/2.3.2/color-thief.umd.js"></script>
</head>
<body>
    <h1>Mood Ratings</h1>

    <main class="content">
        <!-- Playlist URL input box -->
        <section class="playlist-input">
        <h2>Add a Playlist</h2>
        <form id="playlistForm">
            <label for="playlistUrl">Playlist URL:</label>
            <input type="url" id="playlistUrl" name="url" placeholder="Enter playlist URL" required>
            

            <button type="submit">Submit</button>
        </form>
        </section>

        
    </main>

        
        <main class="content">
            <h2 class="search">
                <!-- searching for the name of the playlist or the mood of the playlist -->
                    <div class="search-bar">
                    <input class="search-bar-input" placeholder="search"></input>
                    </div>
            </h2>
            <div class="sorting-box">
                <h2 class="sorting">
                    Sorting
                </h2>

                <!-- sort number of upvotes -->
                <div class="sort-upvotes">
                    <label class="sort-upvotes-label">Upvotes</label>
                </div>

                <!-- number of views -->
                <div class="views">
                    <label class="views-label">Views</label>
                </div>

                <!-- how recent the post was created -->
                <div class="creation-date">
                    <label class="creation-date-label">Date Created</label>
                </div>

                <!-- how recent the post was updated -->
                <!-- nah -->

                <!-- alphabetical by title -->
                <div class="alpabetical-title">
                    <label class="alpabetical-title-label">Title</label>
                </div>

                <!-- alpabetical by creator -->
                <div class="alpabetical-creator">
                    <label class="alpabetical-creator-label">Creator Name</label>
                </div>
                    <!-- make  -->
                
            </div>


            <section id="post-container">

              {% for playlist in playlists %}

                <a href="/playlist/{{ loop.index }}" class="post" data-artist="{{ playlist.songs[0].artist }}" data-upvotes="0" data-views="0" data-mood="{{ playlist.mood }}">

                    <div class="image-section">
                        <!-- image would go here -->
                        <img src="{{ playlist['image-url'] }}" alt=" {{ playlist['playlist-name'] }}">

                    </div>
                    <div class="post-description">
                        <p class="post-title">{{ playlist['playlist-name'] }}</p>
                    </div>
                </a>

                {% endfor %}

            </section>
        </main>
    </body>
</html>
